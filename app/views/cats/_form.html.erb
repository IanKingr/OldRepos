<% if @cat.persisted? %>
  <form action= <%= cat_url(@cat) %> method="post">
    <input type="hidden" name="_method" value="patch">
<% else %>
  <form action="/cats" method="post">
<% end %>

  <input type="text" name="cat[name]" value= <%= @cat.name %> > <br><br>

  <input type="date" name="cat[birth_date]" value= <%= @cat.birth_date%>><br><br>

  <select name="cat[color]" id="cat_color"><br><br>
    <% case @cat.color %>
    <% when 'brown' %>
      <option value="brown" selected>Brown</option>
      <option value="black">Black</option>
      <option value="blue">Blue</option>
    <% when 'black'%>
      <option value="brown">Brown</option>
      <option value="black" selected>Black</option>
      <option value="blue">Blue</option>
    <% when 'blue'%>
      <option value="brown">Brown</option>
      <option value="black">Black</option>
      <option value="blue" selected>Blue</option>
    <% else %>
      <option value="brown">Brown</option>
      <option value="black">Black</option>
      <option value="blue">Blue</option>
    <% end %>
  </select><br><br>

  <% if @cat.sex == "F" %>
    <input type="radio" name="cat[sex]" id="cat_sex_female" value="F" checked>
    <label for="cat_sex_female">Female</label>
    <input type="radio" name="cat[sex]" id="cat_sex_male" value="M">
    <label for="cat_sex_male">Male</label><br><br>
  <% elsif @cat.sex == "M" %>
    <input type="radio" name="cat[sex]" id="cat_sex_female" value="F">
    <label for="cat_sex_female">Female</label>
    <input type="radio" name="cat[sex]" id="cat_sex_male" value="M" checked>
    <label for="cat_sex_male">Male</label><br><br>
  <% else %>
    <input type="radio" name="cat[sex]" id="cat_sex_female" value="F">
    <label for="cat_sex_female">Female</label>
    <input type="radio" name="cat[sex]" id="cat_sex_male" value="M">
    <label for="cat_sex_male">Male</label><br><br>
  <% end %>


  <label for="cat_biography">Cat's History</label><br><br>
    <textarea name="cat[description]" id="cat_biography"><%=@cat.description %></textarea><br><br>
  <input type="submit" value="CAT!">
</form>
